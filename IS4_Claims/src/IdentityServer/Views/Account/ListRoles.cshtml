@model IEnumerable<IdentityServer.ViewModels.RoleViewModel>
@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>
<a class="btn btn-primary mb-3" style="width:auto"
   asp-controller="Account" asp-action="AddRole">
    Add new role
</a>
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3" style="width: 18px">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.RoleName
                </h5>
                <form asp-action="DeleteRoles" asp-route-id="@role.Id" method="post">
                    <div class="card-footer">
                        <a asp-action="UpdateRole" asp-route-id="@role.Id"
                           class="btn btn-warning">
                            Update
                        </a>
                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>
                        <a asp-action="AssignRole" asp-route-roleId="@role.Id" class="btn btn-primary">
                            Add User to Role
                        </a>

                    </div>
                </form>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No role added yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="AddRole">
                Add new role
            </a>
        </div>
    </div>
}